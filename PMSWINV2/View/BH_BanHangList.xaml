                <dxg:GridColumn x:Name="colNgayLap" FieldName="Ngaylap" Header="Ngày lập" Width="120" HorizontalHeaderContentAlignment="Center"/>
            </dxg:GridControl.Columns>
        </dxg:GridControl>

        
  
